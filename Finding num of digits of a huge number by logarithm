/* finding num of digits of a huge number by logarithm
int part of log10(n)+1 is the number of digits of n... */
#include <stdio.h>
#include <math.h>
int main(){
     double number, result;
     int count;
     while(scanf("%lf",&number)==1){
     result = log10(number);
     count=result;
     count+=1;
     printf("Number of digits= %d \n",count );
     }
     return 0;
}
